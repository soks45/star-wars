{
    "root": true,
    "ignorePatterns": ["projects/**/*"],
    "overrides": [
        {
            "parser": "@typescript-eslint/parser",
            "files": ["*.ts"],
            "parserOptions": {
                "project": ["tsconfig.app.json"]
            },
            "extends": [
                "plugin:@angular-eslint/recommended",
                "plugin:@angular-eslint/template/process-inline-templates",
                "plugin:rxjs/recommended",
                "prettier"
            ],
            "rules": {
                "accessor-pairs": "error",
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "sw",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "sw",
                        "style": "kebab-case"
                    }
                ],
                "@angular-eslint/prefer-on-push-component-change-detection": 2,
                "indent": [
                    "error",
                    4,
                    {
                        "SwitchCase": 1
                    }
                ],
                "rxjs/no-async-subscribe": "error",
                "rxjs/no-ignored-observable": "error",
                "rxjs/no-nested-subscribe": "error",
                "rxjs/no-unbound-methods": "error",
                "rxjs/throw-error": "error"
            }
        },
        {
            "files": ["*.html"],
            "extends": ["plugin:@angular-eslint/template/recommended"],
            "rules": {}
        },
        {
            "parser": "@typescript-eslint/parser",
            "files": ["*.ts"],
            "parserOptions": {
                "project": ["tsconfig.app.json"]
            },
            "plugins": ["unused-imports"],
            "rules": {
                "no-unused-vars": "off",
                "unused-imports/no-unused-imports": "error",
                "unused-imports/no-unused-vars": [
                    "warn",
                    {
                        "vars": "all",
                        "varsIgnorePattern": "^_",
                        "args": "after-used",
                        "argsIgnorePattern": "^_"
                    }
                ]
            }
        },
        {
            "files": ["*.ts"],
            "plugins": ["import"],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "import/order": [
                    "error",
                    {
                        "groups": ["builtin", "external", "internal", ["parent", "sibling"], "index", "object", "type"],
                        "pathGroups": [
                            {
                                "pattern": "@angular/**",
                                "group": "external",
                                "position": "before"
                            }
                        ],
                        "pathGroupsExcludedImportTypes": ["builtin"],
                        "alphabetize": {
                            "order": "asc",
                            "caseInsensitive": true
                        },
                        "newlines-between": "always"
                    }
                ],
                "import/newline-after-import": "error",
                "import/first": "error",
                "import/no-duplicates": "error"
            }
        },
        {
            "parser": "@typescript-eslint/parser",
            "files": ["*.ts"],
            "parserOptions": {
                "project": ["tsconfig.app.json"]
            },
            "plugins": ["boundaries"],
            "settings": {
                "import/resolver": {
                    "typescript": {
                        "alwaysTryTypes": true,
                        "project": "tsconfig.app.json"
                    }
                },
                "boundaries/base-path": "src/app",
                "boundaries/elements": [
                    { "type": "core", "pattern": "core/*" },
                    { "type": "repository", "pattern": "repositories/*", "capture": ["repositoryName"] },
                    { "type": "shared", "pattern": "shared/*" },
                    { "type": "feature", "pattern": "features/*", "capture": ["featureName"] }
                ]
            },
            "rules": {
                "boundaries/element-types": [
                    2,
                    {
                        "default": "disallow",
                        "rules": [
                            { "from": "core", "allow": ["core"] },
                            {
                                "from": "repository",
                                "allow": [["repository", { "repositoryName": "${from.repositoryName}" }], "core"]
                            },
                            { "from": "shared", "allow": ["shared", "repository", "core"] },
                            {
                                "from": "feature",
                                "allow": [
                                    ["feature", { "featureName": "${from.featureName}" }],
                                    "shared",
                                    ["repository", { "repositoryName": "\"${from.featureName}" }],
                                    "core"
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
